{
	"name": "tldraw-desktop",
	"productName": "tldraw",
	"version": "1.0.9",
	"description": "A desktop app for tldraw",
	"main": "./out/main/index.js",
	"author": {
		"name": "tldraw.com",
		"email": "hello@tldraw.com",
		"url": "https://tldraw.com"
	},
	"homepage": "https://tldraw.com",
	"scripts": {
		"format": "prettier --write .",
		"lint": "eslint . --fix",
		"typecheck:node:watch": "tsc --noEmit -p tsconfig.node.json --composite false --watch",
		"typecheck:web:watch": "tsc --noEmit -p tsconfig.web.json --composite false --watch",
		"typecheck:node": "tsc --noEmit -p tsconfig.node.json --composite false",
		"typecheck:web": "tsc --noEmit -p tsconfig.web.json --composite false",
		"typecheck": "npm run typecheck:node && npm run typecheck:web",
		"start": "electron-vite preview",
		"dev": "electron-vite dev",
		"build": "npm run typecheck && electron-vite build",
		"postinstall": "electron-builder install-app-deps",
		"build:unpack": "npm run build && electron-builder --dir",
		"build:win": "npm run build && electron-builder --win",
		"build:mac": "electron-vite build && electron-builder --mac",
		"build:linux": "electron-vite build && electron-builder --linux",
		"e2e": "electron-vite build && playwright test",
		"e2e:ui": "electron-vite build && playwright test --ui",
		"clean": "rm -rf .playwright-results test-results",
		"publish": "electron-builder -p always",
		"publish:test": "electron-builder -p never --log-level debug"
	},
	"dependencies": {
		"@electron-toolkit/preload": "^3.0.2",
		"@electron-toolkit/utils": "^4.0.0",
		"@tldraw/utils": "^4.2.1",
		"dotenv": "^17.0.0",
		"electron-updater": "^6.6.2",
		"react": "^19.0.0",
		"react-dom": "^19.0.0",
		"react-router": "^7.6.1",
		"react-router-dom": "^7.6.1",
		"tldraw": "^4.2.1"
	},
	"devDependencies": {
		"@electron-toolkit/tsconfig": "^2.0.0",
		"@eslint/js": "^9.0.0",
		"@playwright/test": "^1.52.0",
		"@types/node": "^22.10.2",
		"@types/react": "^19.0.0",
		"@types/react-dom": "^19.0.0",
		"@vitejs/plugin-react": "^5.0.0",
		"cross-env": "^10.0.0",
		"electron": "^39.0.0",
		"electron-builder": "^26.0.0",
		"electron-playwright-helpers": "^2.1.0",
		"electron-vite": "^5.0.0",
		"eslint": "^9.0.0",
		"eslint-plugin-react": "^7.37.5",
		"eslint-plugin-react-hooks": "^5.2.0",
		"eslint-plugin-react-refresh": "^0.4.20",
		"globals": "^15.0.0",
		"octokit": "^5.0.0",
		"prettier": "^3.5.3",
		"prettier-plugin-organize-imports": "^4.1.0",
		"tsx": "^4.19.4",
		"typescript": "^5.8.3",
		"typescript-eslint": "^8.0.0",
		"vite": "^7.0.0"
	},
	"repository": {
		"type": "git",
		"url": "https://github.com/tldraw/tldraw-desktop.git"
	},
	"license": "UNLICENSED",
	"type": "module"
}
